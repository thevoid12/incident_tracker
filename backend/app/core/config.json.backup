{
  "APP": {
    "TITLE": "Incident Tracker",
    "VERSION": "1.0.0"
  },
  "CORS": {
    "ALLOW_ORIGINS": [
      "http://localhost:5173",
      "http://localhost:3000",
      "http://127.0.0.1:5173",
      "http://127.0.0.1:3000"
    ],
    "ALLOW_CREDENTIALS": true,
    "ALLOW_METHODS": ["*"],
    "ALLOW_HEADERS": ["*"]
  },
  "PAGINATION": {
    "DEFAULT_LIMIT": 10,
    "MAX_LIMIT": 100,
    "AUDIT_TRAIL_DEFAULT_LIMIT": 10,
    "INCIDENT_DEFAULT_LIMIT": 5
  },
  "LOGGING": {
    "LEVEL": "DEBUG",
    "MAX_BYTES": 10485760,
    "BACKUP_COUNT": 5,
    "LOG_FORMAT": "%(asctime)s | %(levelname)-8s | %(name)-20s | %(filename)-15s:%(lineno)-4d | %(message)s",
    "DATE_FORMAT": "%Y-%m-%d %H:%M:%S",
    "LOGGER_NAME": "incident_tracker",
    "CONSOLE_LEVEL": "INFO",
    "FILE_LEVEL": "DEBUG",
    "EXTERNAL_LOGGERS": {
      "sqlalchemy.engine": "WARNING",
      "sqlalchemy.pool": "WARNING",
      "sqlalchemy.dialects": "WARNING",
      "uvicorn": "INFO",
      "uvicorn.access": "WARNING"
    }
  }
}